  margin-bottom: 3rem;
  line-height: 1.8;
}

.footer-profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rem;
}

.profile-thumb {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  border: 3px solid var(--teal);
  object-fit: cover;
  box-shadow: 0 8px 30px rgba(0, 179, 164, 0.3);
}

.linkedin-button {
  display: inline-flex;
  align-items: center;
  gap: 0.8rem;
  padding: 1rem 2.5rem;
  background: linear-gradient(135deg, var(--teal) 0%, var(--teal-dark) 100%);
  color: var(--grafito);
  text-decoration: none;
  border-radius: 12px;
  font-weight: 700;
  font-size: 1.05rem;
  transition: all 0.3s;
  border: 2px solid var(--teal);
}

.linkedin-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 40px var(--glow);
}

/* Footer */
footer {
  text-align: center;
  padding: 3rem;
  border-top: 1px solid var(--border);
  color: rgba(248, 249, 250, 0.4);
  font-size: 0.9rem;
}

/* Responsive */
@media (max-width: 1024px) {
  .nav-links {
    display: none;
  }

  .hero h1 {
    font-size: 2.5rem;
  }

  .section-title {
    font-size: 2.2rem;
  }

  .domains-grid,
  .applications-grid,
  .insights-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .nav-container {
    padding: 1rem 1.5rem;
  }

  .hero {
    padding: 10rem 1.5rem 6rem;
  }

  .hero-logo {
    width: 140px;
  }

  .hero h1 {
    font-size: 2rem;
    letter-spacing: -1px;
  }

  .hero-subtitle {
    font-size: 1.1rem;
  }

  .recognition-bar {
    gap: 2rem;
  }

  .recognition-number {
    font-size: 2rem;
  }

  section {
    padding: 4rem 1.5rem;
  }

  .section-title {
    font-size: 1.8rem;
  }
}

html {
  scroll-behavior: smooth;
}
