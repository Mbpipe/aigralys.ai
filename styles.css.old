:root{
  --grafito:#1C1C1E;
  --grafito-light:#2d2d3a;
  --off-white:#F8F9FA;
  --teal:#00B3A4;
  --teal-dark:#009688;
  --cyan:#00CFFF;
  --oliva:#7DA453;
  --naranja:#FF7043;
  --border:rgba(0,179,164,0.15);
  --glow:rgba(0,179,164,0.3);
}
*{margin:0;padding:0;box-sizing:border-box}
body{font-family:'Inter',-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;background:var(--grafito);color:var(--off-white);line-height:1.6;overflow-x:hidden;position:relative}
.bg-animation{position:fixed;inset:0;z-index:0;opacity:.4;
  background:
  radial-gradient(circle at 20% 50%, rgba(0,179,164,.1) 0%, transparent 50%),
  radial-gradient(circle at 80% 80%, rgba(125,164,83,.08) 0%, transparent 50%),
  radial-gradient(circle at 40% 20%, rgba(0,207,255,.05) 0%, transparent 40%);}
.grid-overlay{position:fixed;inset:0;z-index:1;background-image:linear-gradient(rgba(0,179,164,.03) 1px,transparent 1px),linear-gradient(90deg, rgba(0,179,164,.03) 1px,transparent 1px);background-size:50px 50px;pointer-events:none}
.floating-shapes{position:fixed;inset:0;z-index:1;pointer-events:none;overflow:hidden}
.shape{position:absolute;border:1px solid var(--border);animation:float 20s infinite ease-in-out}
.shape-1{width:200px;height:200px;border-radius:50%;top:10%;right:10%}
.shape-2{width:150px;height:150px;transform:rotate(45deg);bottom:20%;left:15%}
.shape-3{width:100px;height:100px;border-radius:20px;top:60%;right:20%}
@keyframes float{0%,100%{transform:translateY(0) rotate(0)}25%{transform:translateY(-20px) rotate(5deg)}50%{transform:translateY(-40px) rotate(-5deg)}75%{transform:translateY(-20px) rotate(5deg)}}
.content{position:relative;z-index:10}
nav{position:fixed;top:0;width:100%;background:rgba(28,28,30,.9);backdrop-filter:blur(20px);z-index:1000;border-bottom:1px solid var(--border)}
.nav-container{max-width:1400px;margin:0 auto;padding:1.2rem 3rem;display:flex;justify-content:space-between;align-items:center}
.brand{display:flex;align-items:center;gap:.8rem}
.brand-logo{width:28px;height:28px;object-fit:contain;border-radius:4px}
.brand-text{font-size:1.1rem;font-weight:800;background:linear-gradient(135deg,var(--teal) 0%, var(--cyan) 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent;letter-spacing:-.3px}
.brand-by{font-size:.95rem;color:rgba(248,249,250,.7)}
.nav-links{display:flex;gap:2.2rem;list-style:none;align-items:center}
.nav-links a{color:rgba(248,249,250,.8);text-decoration:none;transition:all .3s;font-size:.95rem;font-weight:500;position:relative}
.nav-links a::after{content:'';position:absolute;bottom:-5px;left:0;width:0;height:2px;background:var(--teal);transition:width .3s}
.nav-links a:hover{color:var(--teal)}.nav-links a:hover::after{width:100%}
.lang-switch{background:transparent;border:1px solid var(--border);color:var(--off-white);padding:.5rem 1rem;border-radius:8px;cursor:pointer;font-size:.85rem;font-weight:600;transition:all .3s}
.lang-switch:hover{border-color:var(--teal);background:rgba(0,179,164,.1);box-shadow:0 0 20px var(--glow)}
.hero.minimal{padding:8rem 3rem 4rem;max-width:1400px;margin:0 auto}
.hero-content h1{font-size:3.2rem;line-height:1.1;margin-bottom:1.2rem;font-weight:800;background:linear-gradient(135deg,var(--off-white) 0%, var(--teal) 60%, var(--cyan) 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent;letter-spacing:-1px}
.hero-subtitle{font-size:1.15rem;color:rgba(248,249,250,.75);margin-bottom:2rem;line-height:1.8;font-weight:300;max-width:950px}
.recognition-bar{display:flex;gap:2.5rem;margin-top:1rem;margin-bottom:0;flex-wrap:wrap}
.recognition-item{display:flex;flex-direction:column;gap:.3rem}
.recognition-number{font-size:2rem;font-weight:800;background:linear-gradient(135deg,var(--teal) 0%, var(--cyan) 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent}
.recognition-label{font-size:.85rem;color:rgba(248,249,250,.6);text-transform:uppercase;letter-spacing:1px;font-weight:600}
.expertise{padding:4rem 3rem;max-width:1400px;margin:0 auto}
.expertise.tight{padding-top:2rem}
.section-header{text-align:center;margin-bottom:3.5rem}
.section-title{font-size:2.4rem;font-weight:800;margin-bottom:1rem;background:linear-gradient(135deg,var(--off-white) 0%, var(--teal) 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent}
.section-subtitle{font-size:1.1rem;color:rgba(248,249,250,.6);max-width:900px;margin:0 auto;font-weight:300}
.domains-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(360px,1fr));gap:2rem}
.domain-card{background:linear-gradient(135deg, rgba(0,179,164,.05) 0%, rgba(28,28,30,.8) 100%);padding:2rem;border-radius:18px;border:1px solid var(--border);transition:all .4s;position:relative;overflow:hidden}
.domain-card::before{content:'';position:absolute;top:0;left:0;width:100%;height:4px;background:linear-gradient(90deg,var(--teal) 0%, var(--cyan) 50%, var(--oliva) 100%);transform:scaleX(0);transform-origin:left;transition:transform .4s}
.domain-card:hover::before{transform:scaleX(1)}
.domain-card:hover{transform:translateY(-6px);border-color:var(--teal);box-shadow:0 20px 60px rgba(0,179,164,.2)}
.domain-title{font-size:1.35rem;font-weight:700;margin-bottom:1rem;color:var(--teal)}
.domain-list{list-style:none;display:flex;flex-direction:column;gap:.8rem}
.domain-list li{padding-left:1.2rem;position:relative;color:rgba(248,249,250,.8);font-size:.98rem;line-height:1.55}
.domain-list li::before{content:'â–¸';position:absolute;left:0;color:var(--oliva);font-weight:700}
.focus-areas{background:linear-gradient(135deg, rgba(125,164,83,.08) 0%, rgba(0,179,164,.05) 100%);padding:4rem 3rem;margin:2rem 0;border-top:1px solid var(--border);border-bottom:1px solid var(--border)}
.focus-container{max-width:1400px;margin:0 auto}
.focus-intro{font-size:1.05rem;line-height:1.8;color:rgba(248,249,250,.85);margin-bottom:2rem;max-width:900px}
.applications-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:1.5rem}
.app-card{background:rgba(28,28,30,.6);padding:1.6rem;border-radius:14px;border:1px solid rgba(125,164,83,.2);border-left:4px solid var(--oliva);transition:all .3s}
.app-card:hover{transform:translateX(6px);border-left-color:var(--teal);background:rgba(28,28,30,.8)}
.app-card h3{color:var(--oliva);margin-bottom:.6rem;font-size:1.05rem;font-weight:700}
.app-card p{color:rgba(248,249,250,.78);font-size:.95rem;line-height:1.7}
.insights{padding:4rem 3rem;max-width:1400px;margin:0 auto}
.insights-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(320px,1fr));gap:2rem}
.insight-card{background:rgba(255,255,255,.02);padding:1.8rem;border-radius:14px;border:1px solid var(--border);transition:all .4s;position:relative}
.insight-card::after{content:'';position:absolute;inset:0;border-radius:14px;background:linear-gradient(135deg,var(--teal) 0%, var(--cyan) 100%);opacity:0;transition:opacity .4s;z-index:-1}
.insight-card:hover::after{opacity:.05}
.insight-card:hover{transform:translateY(-6px);border-color:var(--cyan);box-shadow:0 15px 50px rgba(0,207,255,.2)}
.insight-tag{display:inline-block;padding:.35rem .8rem;background:rgba(0,179,164,.15);color:var(--cyan);border-radius:20px;font-size:.72rem;font-weight:700;text-transform:uppercase;letter-spacing:1px;margin-bottom:1rem}
.insight-title{font-size:1.2rem;font-weight:700;margin-bottom:.6rem;color:var(--teal);line-height:1.4}
.insight-text{color:rgba(248,249,250,.78);line-height:1.7;font-size:.95rem}
.connect{padding:4rem 3rem;max-width:900px;margin:0 auto;text-align:center}
.connect h2{font-size:2.2rem;font-weight:800;margin-bottom:1rem;background:linear-gradient(135deg,var(--off-white) 0%, var(--teal) 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent}
.connect-text{font-size:1.1rem;color:rgba(248,249,250,.75);margin-bottom:2rem;line-height:1.8}
.footer-profile{display:flex;flex-direction:column;gap:1rem;align-items:center;justify-content:center}
.profile-thumb{width:88px;height:88px;border-radius:10px;object-fit:cover;border:2px solid var(--border);box-shadow:0 8px 30px rgba(0,0,0,.4)}
.linkedin-button{display:inline-flex;align-items:center;gap:.8rem;padding:.9rem 1.4rem;background:linear-gradient(135deg,var(--teal) 0%, var(--teal-dark) 100%);color:var(--grafito);text-decoration:none;border-radius:10px;font-weight:800;font-size:1rem;transition:all .3s;border:2px solid var(--teal)}
.linkedin-button:hover{transform:translateY(-3px) scale(1.01);box-shadow:0 12px 40px var(--glow)}
footer{text-align:center;padding:3rem;border-top:1px solid var(--border);color:rgba(248,249,250,.5);font-size:.9rem}
@media (max-width:1024px){
  .nav-links{display:none}
  .nav-container{padding:1rem 1.5rem}
  .hero.minimal{padding:7rem 1.5rem 2rem}
  .hero-content h1{font-size:2.4rem}
}
html{scroll-behavior:smooth}
